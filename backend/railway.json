{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "python manage.py migrate && gunicorn --bind 0.0.0.0:$PORT --workers 4 --threads 2 backend.wsgi:application"
  }
}
