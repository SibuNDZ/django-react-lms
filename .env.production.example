# Production Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# REQUIRED - Application will not start without these
# ===========================================

# Django secret key (generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=your-super-secret-key-here

# PostgreSQL credentials
POSTGRES_DB=lms_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-password-here

# ===========================================
# DOMAIN CONFIGURATION
# ===========================================

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend URL (for email links, redirects, etc.)
FRONTEND_SITE_URL=https://yourdomain.com

# ===========================================
# FRONTEND BUILD VARIABLES
# ===========================================

# API URL (relative or absolute)
VITE_API_URL=/api

# Stripe publishable key
VITE_STRIPE_PUBLIC_KEY=pk_live_...

# PayPal client ID
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id

# ===========================================
# EMAIL CONFIGURATION (choose one provider)
# ===========================================

# Mailgun
MAILGUN_API_KEY=key-...
MAILGUN_SENDER_DOMAIN=mg.yourdomain.com
FROM_EMAIL=noreply@yourdomain.com

# Or MailerSend
# MAILERSEND_API_TOKEN=...

# ===========================================
# PAYMENT PROCESSING
# ===========================================

# Stripe
STRIPE_SECRET_KEY=sk_live_...

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET_ID=your-paypal-secret-id

# ===========================================
# AWS S3 (Optional - for media storage)
# ===========================================

USE_S3=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# ===========================================
# LOGGING
# ===========================================

DJANGO_LOG_LEVEL=INFO
